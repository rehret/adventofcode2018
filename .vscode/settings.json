{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/.nyc_output": true,
        "**/coverage": true
    },
    "mocha.files.glob": "src/**/*.spec.ts",
    "mocha.requires": [
        "ts-node/register"
    ],
    "mocha.options": [
        "--no-timeouts"
    ]
}
